{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form action="{{ path('app_login') }}" method="post" class="container text-center my-3">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Login</h1>
        <div class="col-8 offset-sm-2">
            <div class="container border p-5">
                <div class="row my-3">
                    <div class="col-12 col-sm-8 offset-sm-2">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-12 col-sm-8 offset-sm-2">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-12 col-sm-8 offset-sm-2">
                        <a href="{# {{ path('forgotten_password') }} #}">Mot de passe oubli√©</a>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-12 col-sm-8 offset-sm-2">
                        <div class="form-check mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me" class="form-check-input">Se souvenir de moi
                            </label>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
{#                <input type="hidden" name="_target_path" value="/account">#}

                <button class="btn btn-lg btn-primary my-3" type="submit">
                    Login
                </button>
            </div>
        </div>
    </form>
{% endblock %}
