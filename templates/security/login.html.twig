{% extends 'base.html.twig' %}

{% block title %}Connecte-toi !{% endblock %}

{% block body %}
<div class="homepage_screen login">
    <div class="homepage_img">
        <img src="{{ asset('build/images/freestyle.jpeg') }}" alt="freestyle" class="homepage_img-img"/>
    </div>
    <div class="container">
        <form action="{{ path('app_login') }}" method="post" class="py-3 bg-light-subtle rounded-2 homepage_bloc_text position_text_50 text-center text-primary my-sm-5">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

        {#        {% if app.user %}#}
