{% extends 'base.html.twig' %}

{% block title %}Ajouter un trick{% endblock %}

{% block body %}
<div class="container register text-center text-primary pt-3 bg-secondary-subtle rounded-2 my-3 my-sm-5">
    <div class="row h3">
        <h1 class="h3">Ajoute une figure et quelques m√©dias !</h1>
    </div>
    {{ form_errors(addTrickForm) }}
