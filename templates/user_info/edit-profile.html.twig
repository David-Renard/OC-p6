{% extends 'base.html.twig' %}

{% block title %}Editer mon profil{% endblock %}

{% block body %}
<div class="container register text-center text-primary pt-3 bg-secondary-subtle rounded-2 my-3 my-sm-5">
    <div class="row h3">
        <div class="col my-3">
            <h1 class="h3">Editer mon profil</h1>
            <h2 class="h6 w-sm-50 fst-italic m-auto mb-5">Sur cette page, vous pouvez changer votre nom d'utilisateur et/ou votre avatar...</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-10 offset-1 col-sm-8 offset-sm-2 border border-primary-subtle">
            {{ form_errors(form) }}
            {% for message in app.flashes('error') %}
                <div class="alert alert-error bg-danger-subtle mb-0 rounded-0 text-center text-danger fw-bold z-3">
                    {{ message }}
                </div>
            {% endfor %}
            {{ form_start(form) }}
            <div class="my-3 d-flex justify-content-around">
                {{ form_row(form.username) }}
            </div>
            <div class="my-3 d-flex justify-content-around">
                {{ form_row(form.userPicture) }}
            </div>
            <div class="my-3">
                <button type="submit" class="btn btn-primary">Valider les modifications</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}