{# display main picture if there is one #}
{% if trick.getMainPicture() %}
    <img src="{{ asset(trick.getMainPicture().url) }}" class="img-thumbnail h-500" alt="{{ trick.getMainPicture().name }}"/>
{# display default picture if there is no pictures #}
{% elseif trick.getPictures() is empty %}
    <div class="position-relative">
        <img src="{{ asset('build/images/freestyle.jpeg') }}" class="img-thumbnail h-500 default_picture-picture" alt="image par dÃ©faut"/>
        <p class="position-absolute no-pictures-text bg-secondary-subtle rounded-2 w-75 m-auto opacity-75 text-primary h5 fw-bold">Il n'y a pas d'image sur ce trick, ajoutes-en une!</p>
    </div>
{# display 1st picture ordered by id if there is no main picture #}
{% elseif trick.getMainPicture() is empty %}
    <img src="{{ asset(trick.getPictures()|first.url) }}" class="img-thumbnail h-500" alt="{{ trick.getPictures()|first.name }}"/>
{% endif %}